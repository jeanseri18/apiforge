APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=   

dd

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nexa_framework
DB_USERNAME=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=nexa_

# Queue Configuration
